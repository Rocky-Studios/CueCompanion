@inherits LayoutComponentBase


<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5">CueCompanion</MudText>
        <MudSpacer></MudSpacer>
        @if (Auth.Connection != null)
        {
            <MudText Typo="Typo.h3" Class="me-2">
                @Auth.Connection.ConnectionName
            </MudText>
            <MudIcon Icon="@Icons.Material.Filled.AccountCircle" Size="Size.Large"></MudIcon>
        }
        @if (!Auth.isLoading)
        {
            <MudProgressCircular Class="ms-1" Color="Color.Default" Indeterminate="true" Size="Size.Small"/>
        }
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="DrawerVariant.Persistent">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    static MudTheme Theme => CueCompanionThemes.CueCompanionTheme;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            Auth.OnStateChanged += StateHasChanged;
        }
    }

}