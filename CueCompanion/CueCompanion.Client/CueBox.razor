<div class="cue-box color-@Color.ToLower()">
    <span class="cue-name">@Name</span>
    @if (Number.HasValue)
    {
        <span class="cue-number">@Number</span>
    }
</div>

@code {
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Color { get; set; } = "Gray";
    [Parameter] public int? Number { get; set; }
}